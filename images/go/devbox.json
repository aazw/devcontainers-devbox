{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.16.0/.schema/devbox.schema.json",
  "packages": [
    // https://github.com/golang/go
    // https://www.nixhub.io/packages/go
    "go@latest",

    // ローカル開発用の自己署名証明書を生成
    // https://github.com/FiloSottile/mkcert
    // https://www.nixhub.io/packages/mkcert
    // https://github.com/NixOS/nixpkgs/blob/master/pkgs/by-name/mk/mkcert/package.nix
    "mkcert@1.4.4",

    // Goのデバッガ
    // https://github.com/go-delve/delve
    // https://www.nixhub.io/packages/delve
    // https://github.com/NixOS/nixpkgs/blob/master/pkgs/by-name/de/delve/package.nix
    "delve@1.25.2",

    // GoのLSPサーバー（エディタ補完/診断）
    // https://github.com/golang/tools
    // https://www.nixhub.io/packages/gopls
    // https://github.com/NixOS/nixpkgs/blob/master/pkgs/by-name/go/gopls/package.nix
    "gopls@0.21.0",

    // Go向けツール群（imports/vet/staticcheck等）
    // https://github.com/golang/tools
    // https://www.nixhub.io/packages/go-tools
    // https://github.com/NixOS/nixpkgs/blob/master/pkgs/by-name/go/go-tools/package.nix
    "go-tools@2025.1.1",

    // 依存ライセンスの収集・出力
    // https://github.com/google/go-licenses
    // https://www.nixhub.io/packages/go-licenses
    // https://github.com/NixOS/nixpkgs/blob/master/pkgs/by-name/go/go-licenses/package.nix
    "go-licenses@latest",

    // Goの統合lint
    // https://github.com/golangci/golangci-lint
    // https://www.nixhub.io/packages/golangci-lint
    // https://github.com/NixOS/nixpkgs/blob/master/pkgs/by-name/go/golangci-lint/package.nix
    "golangci-lint@2.7.2"
  ]
}
