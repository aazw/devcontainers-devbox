{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.16.0/.schema/devbox.schema.json",
  "packages": [
    // Go本体
    // https://github.com/golang/go
    // https://search.nixos.org/packages?show=go&query=go
    // https://www.nixhub.io/packages/go
    // https://github.com/NixOS/nixpkgs/blob/master/pkgs/development/compilers/go/1.25.nix
    "go@1.25.4",

    // ローカル開発用の自己署名証明書を生成
    // https://github.com/FiloSottile/mkcert
    // https://search.nixos.org/packages?show=mkcert&query=mkcert
    // https://www.nixhub.io/packages/mkcert
    // https://github.com/NixOS/nixpkgs/blob/master/pkgs/by-name/mk/mkcert/package.nix
    "mkcert@1.4.4",

    // Goのデバッガ
    // https://github.com/go-delve/delve
    // https://search.nixos.org/packages?show=delve&query=delve
    // https://www.nixhub.io/packages/delve
    // https://github.com/NixOS/nixpkgs/blob/master/pkgs/by-name/de/delve/package.nix
    "delve@1.25.2",

    // GoのLSPサーバー（エディタ補完/診断）
    // https://github.com/golang/tools
    // https://search.nixos.org/packages?show=gopls&query=gopls
    // https://www.nixhub.io/packages/gopls
    // https://github.com/NixOS/nixpkgs/blob/master/pkgs/by-name/go/gopls/package.nix
    "gopls@0.21.0",

    // Go向け静的解析ツール群（staticcheck等）
    // https://github.com/dominikh/go-tools
    // https://search.nixos.org/packages?show=go-tools&query=go-tools
    // https://www.nixhub.io/packages/go-tools
    // https://github.com/NixOS/nixpkgs/blob/master/pkgs/by-name/go/go-tools/package.nix
    "go-tools@2025.1.1",

    // 依存ライセンスの収集・出力
    // https://github.com/google/go-licenses
    // https://search.nixos.org/packages?show=go-licenses&query=go-licenses
    // https://www.nixhub.io/packages/go-licenses
    // https://github.com/NixOS/nixpkgs/blob/master/pkgs/by-name/go/go-licenses/package.nix
    "go-licenses@1.6.0",

    // Goの統合lint
    // https://github.com/golangci/golangci-lint
    // https://search.nixos.org/packages?show=golangci-lint&query=golangci-lint
    // https://www.nixhub.io/packages/golangci-lint
    // https://github.com/NixOS/nixpkgs/blob/master/pkgs/by-name/go/golangci-lint/package.nix
    "golangci-lint@2.7.2",

    // マイグレーションツール
    // https://github.com/golang-migrate/migrate
    // https://search.nixos.org/packages?show=go-migrate&query=go-migrate
    // https://www.nixhub.io/packages/go-migrate
    // https://github.com/NixOS/nixpkgs/blob/master/pkgs/by-name/go/go-migrate/package.nix
    "go-migrate@4.19.1",

    // SQLコードジェネレータ
    // https://github.com/sqlc-dev/sqlc
    // https://search.nixos.org/packages?show=sqlc&query=sqlc
    // https://www.nixhub.io/packages/sqlc
    // https://github.com/NixOS/nixpkgs/blob/master/pkgs/by-name/sq/sqlc/package.nix
    "sqlc@1.30.0"
  ]
}
