{
  "name": "vsc-devcontainers-devbox-js",
  "build": {
    "dockerfile": "./Dockerfile",
    "context": ".."
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "version": "latest",
      "enableNonRootDocker": "true",
      "moby": "true"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "emeraldwalk.runonsave",
        "ms-azuretools.vscode-containers",
        "ms-azuretools.vscode-docker",
        "tamasfe.even-better-toml",
        "oven.bun-vscode", // bun公式提供
        "dbaeumer.vscode-eslint", // microsoft提供
        "bradlc.vscode-tailwindcss" // tailwindcss公式提供
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  "containerUser": "root", // コンテナ起動時・初期化処理のユーザ. docker psできるようにするために必要
  "remoteUser": "vscode",
  "remoteEnv": {
    "LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}",
    "TZ": "Asia/Tokyo",
    "TASK_X_ENV_PRECEDENCE": "1"
  },
  "runArgs": [
    "--name",
    "vsc-devcontainers-devbox-js",
    "--add-host",
    "host.docker.internal:host-gateway"
  ],
  "postAttachCommand": "bun --version"
}
